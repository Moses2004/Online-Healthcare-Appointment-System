@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container py-4">
    <h2 class="fw-bold text-primary mb-4">Admin Dashboard</h2>

    <!-- Summary Cards -->
    <div class="row justify-content-center g-3 mb-4">
        <div class="col-md-3">
            <div class="card shadow-sm border-0 text-center py-3">
                <i class="bi bi-person-badge fs-2 text-primary"></i>
                <h6 class="text-muted mb-1">Total Doctors</h6>
                <h3 class="text-primary fw-bold">@ViewData["DoctorCount"]</h3>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0 text-center py-3">
                <i class="bi bi-people fs-2 text-success"></i>
                <h6 class="text-muted mb-1">Total Patients</h6>
                <h3 class="text-success fw-bold">@ViewData["PatientCount"]</h3>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0 text-center py-3">
                <i class="bi bi-calendar-check fs-2 text-info"></i>
                <h6 class="text-muted mb-1">Appointments</h6>
                <h3 class="text-info fw-bold">@ViewData["AppointmentCount"]</h3>
            </div>
        </div>

     
    </div>

    <!-- Quick Access Buttons -->
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100 text-center p-3 hover-card">
                <div class="card-body">
                    <i class="bi bi-person-gear fs-1 text-primary"></i>
                    <h5 class="card-title mt-3">Manage Doctors</h5>
                    <p class="text-muted">View and manage doctor accounts.</p>
                    <a asp-controller="Doctors" asp-action="Index" class="btn btn-primary px-4">Go</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100 text-center p-3 hover-card">
                <div class="card-body">
                    <i class="bi bi-people fs-1 text-success"></i>
                    <h5 class="card-title mt-3">Manage Patients</h5>
                    <p class="text-muted">View and manage patient records.</p>
                    <a asp-controller="Patients" asp-action="Index" class="btn btn-success px-4">Go</a>
                </div>
            </div>
        </div>

        <!-- Manage Payments -->
<div class="col-md-4">
    <div class="card shadow-sm border-0 h-100 text-center p-3 hover-card">
        <div class="card-body">
            <i class="bi bi-credit-card-2-front fs-1 text-warning"></i>
            <h5 class="card-title mt-3">Manage Payments</h5>
            <p class="text-muted">View all payment transactions.</p>
            <a asp-controller="Payments" asp-action="Index" class="btn btn-warning text-white px-4">Go</a>
        </div>
    </div>
</div>

<!-- Report (General Reports) -->
<div class="col-md-4">
    <div class="card shadow-sm border-0 h-100 text-center p-3 hover-card">
        <div class="card-body">
            <i class="bi bi-bar-chart-line fs-1 text-primary"></i>
            <h5 class="card-title mt-3">Report</h5>
            <p class="text-muted">View all reports.</p>
            <a asp-controller="Reports" asp-action="Index" class="btn btn-primary text-white px-4">Go</a>
        </div>
    </div>
</div>

<!-- Appointment Report -->
<div class="col-md-4">
    <div class="card shadow-sm border-0 h-100 text-center p-3 hover-card">
        <div class="card-body">
            <i class="bi bi-calendar-event fs-1 text-success"></i>
            <h5 class="card-title mt-3">Appointment Report</h5>
            <p class="text-muted">View all appointments.</p>
            <a asp-controller="Appointments" asp-action="Index" class="btn btn-success text-white px-4">Go</a>
        </div>
    </div>
</div>

        <!-- Manage Specializations -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100 text-center p-3 hover-card">
                <div class="card-body">
                    <i class="bi bi-credit-card-2-front fs-1 text-warning"></i>
                    <h5 class="card-title mt-3">Manage Payments</h5>
                    <p class="text-muted"> Manage Specializations.</p>
                    <a asp-controller="Specializations" asp-action="Index" class="btn btn-warning text-white px-4">Go</a>
                </div>
            </div>
        </div>

    </div>

    
</div>



<!--  Styling -->
<style>
    .hover-card:hover {
        transform: translateY(-5px);
        transition: 0.3s ease;
    }

    .card {
        border-radius: 12px;
    }

    .btn-outline-primary {
        border-width: 2px;
        font-weight: 500;
        transition: 0.3s ease;
    }

    .btn-outline-primary:hover {
        background-color: #007bff;
        color: white;
    }

    .btn-primary.btn-lg {
        font-size: 1.1rem;
        font-weight: 600;
        border-radius: 40px;
        box-shadow: 0 4px 10px rgba(0, 123, 255, 0.3);
        transition: 0.3s ease;
    }

    .btn-primary.btn-lg:hover {
        transform: translateY(-3px);
    }
</style>
