@model Online_Healthcare_Appointment_System.Models.Appointment

@{
    ViewData["Title"] = "Create Appointment";
    var isPatient = User.IsInRole("Patient");
}

<h2 class="text-center mb-4">@ViewData["Title"]</h2>

<div class="card shadow-sm p-4 rounded-3">
    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        @* ====== Patient Section ====== *@
        @if (!isPatient)
        {
            <div class="form-group mb-3">
                <label asp-for="PatientId" class="form-label fw-bold"></label>
                <select asp-for="PatientId" asp-items="ViewBag.PatientId" class="form-select">
                    <option value="">-- Select Patient --</option>
                </select>
                <span asp-validation-for="PatientId" class="text-danger"></span>
            </div>
        }
        else
        {
            <!-- Hidden for patient: will be auto-filled from login in controller -->
            <input type="hidden" asp-for="PatientId" />
            <div class="alert alert-info py-2">
                Your patient account will be automatically linked to this appointment.
            </div>
        }

        @* ====== Doctor Section ====== *@
        <div class="form-group mb-3">
            <label asp-for="DoctorId" class="form-label fw-bold"></label>
            <select asp-for="DoctorId" asp-items="ViewBag.DoctorId" class="form-select">
                <option value="">-- Select Doctor --</option>
            </select>
            <span asp-validation-for="DoctorId" class="text-danger"></span>
        </div>

        @* ====== Appointment Date ====== *@
        <div class="form-group mb-3">
            <label asp-for="AppointmentDate" class="form-label fw-bold"></label>
            <input asp-for="AppointmentDate" class="form-control" type="datetime-local" />
            <span asp-validation-for="AppointmentDate" class="text-danger"></span>
        </div>

        @* ====== Notes ====== *@
        <div class="form-group mb-3">
            <label asp-for="Notes" class="form-label fw-bold"></label>
            <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Add additional notes (optional)..."></textarea>
            <span asp-validation-for="Notes" class="text-danger"></span>
        </div>

        @* ====== Status (Default Pending) ====== *@
        <input type="hidden" asp-for="Status" value="Pending" />

        @* ====== Submit Buttons ====== *@
        <div class="form-group text-center mt-4">
            <button type="submit" class="btn btn-primary px-4 me-2">
                <i class="bi bi-check-circle"></i> Create Appointment
            </button>
            <a asp-action="Index" class="btn btn-secondary px-4">
                <i class="bi bi-arrow-left-circle"></i> Back to List
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
