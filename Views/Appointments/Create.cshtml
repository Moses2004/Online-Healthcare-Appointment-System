@model Online_Healthcare_Appointment_System.Models.Appointment
@{
    ViewData["Title"] = "Add Appointment";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center">
            <h4 class="fw-bold text-primary mb-0">Add Appointment</h4>
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">← Back</a>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div class="mb-3">
                    <label asp-for="PatientId" class="form-label fw-semibold">Patient</label>
                    <select asp-for="PatientId" class="form-select" asp-items="ViewBag.PatientId">
                        <option value="">-- Select Patient --</option>
                    </select>
                    <span asp-validation-for="PatientId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DoctorId" class="form-label fw-semibold">Doctor</label>
                    <select asp-for="DoctorId" class="form-select" asp-items="ViewBag.DoctorId">
                        <option value="">-- Select Doctor --</option>
                    </select>
                    <span asp-validation-for="DoctorId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="AppointmentDate" class="form-label fw-semibold"></label>
                    <input asp-for="AppointmentDate" type="datetime-local" class="form-control" />
                    <span asp-validation-for="AppointmentDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Status" class="form-label fw-semibold"></label>
                    <select asp-for="Status" class="form-select">
                        <option>Pending</option>
                        <option>Completed</option>
                        <option>Cancelled</option>
                    </select>
                </div>

                <button type="submit" class="btn btn-primary px-4">Save</button>
                <a asp-action="Index" class="btn btn-outline-secondary px-4">Cancel</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
