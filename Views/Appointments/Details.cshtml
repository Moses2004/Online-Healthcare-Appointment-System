@model Online_Healthcare_Appointment_System.Models.Appointment
@{
    ViewData["Title"] = "Appointment Details";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center">
            <h4 class="fw-bold text-primary mb-0">Appointment Details</h4>
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">← Back</a>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Patient</dt>
                <dd class="col-sm-9">@Model.Patient?.Name</dd>

                <dt class="col-sm-3">Doctor</dt>
                <dd class="col-sm-9">@Model.Doctor?.Name</dd>

                <dt class="col-sm-3">Date</dt>
                <dd class="col-sm-9">@Model.AppointmentDate.ToString("dd MMM yyyy - hh:mm tt")</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-@(Model.Status == "Completed" ? "success" : Model.Status == "Pending" ? "warning text-dark" : "secondary")">
                        @Model.Status
                    </span>
                </dd>
            </dl>

            <a asp-action="Edit" asp-route-id="@Model.AppointmentId" class="btn btn-primary px-4">Edit</a>
            <a asp-action="Index" class="btn btn-outline-secondary px-4">Back</a>
        </div>
    </div>
</div>
