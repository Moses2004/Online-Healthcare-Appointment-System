@model IEnumerable<Online_Healthcare_Appointment_System.Models.Appointment>

@{
    ViewData["Title"] = "Appointment Management";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-primary">Appointments</h2>
        <div>
            <a asp-controller="AdminDashboard" asp-action="Index" class="btn btn-outline-secondary me-2">
                ← Back to Dashboard
            </a>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add Appointment
            </a>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Patient</th>
                            <th>Doctor</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Patient?.Name</td>
                                <td>@item.Doctor?.Name</td>
                                <td>@item.AppointmentDate.ToString("dd MMM yyyy - hh:mm tt")</td>
                                <td>
                                    <span class="badge bg-@(item.Status == "Completed" ? "success" : item.Status == "Pending" ? "warning text-dark" : "secondary")">
                                        @item.Status
                                    </span>
                                </td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.AppointmentId" class="btn btn-sm btn-outline-primary me-1">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.AppointmentId" class="btn btn-sm btn-outline-info me-1">
                                        <i class="bi bi-info-circle"></i> Details
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.AppointmentId" class="btn btn-sm btn-outline-danger me-1">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                    <a asp-action="UpdateStatus" asp-route-id="@item.AppointmentId" class="btn btn-sm btn-outline-success">
                                        <i class="bi bi-arrow-repeat"></i> Update Status
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Any())
            {
                <p class="text-muted text-center mb-0">No appointments available.</p>
            }
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<style>
    body { background-color: #f8f9fa; }
    .card { border-radius: 12px; }
    .btn { border-radius: 8px; }
</style>
