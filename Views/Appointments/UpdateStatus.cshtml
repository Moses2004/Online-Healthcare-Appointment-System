@model Online_Healthcare_Appointment_System.Models.Appointment

@{
    ViewData["Title"] = "Update Appointment Status";
}

<h2>Update Appointment Status</h2>

<div>
    <h4>Appointment with @Model.Patient.Name → @Model.Doctor.Name</h4>
    <hr />
    <form asp-action="UpdateStatus" method="post">
        <input type="hidden" name="id" value="@Model.AppointmentId" />

        <div class="form-group">
            <label>Status</label>
            <select name="status" class="form-control">
                @foreach (var s in (List<string>)ViewData["Statuses"])
                {
                    <option value="@s" selected="@(s == Model.Status ? "selected" : null)">@s</option>
                }
            </select>
        </div>

        <button type="submit" class="btn btn-primary mt-2">Save</button>
        <a asp-action="Index" class="btn btn-secondary mt-2">Cancel</a>
    </form>
</div>
