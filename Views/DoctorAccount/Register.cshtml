@model Online_Healthcare_Appointment_System.Models.DoctorRegisterViewModel

<h2>Doctor Registration</h2>
<form asp-action="Register" method="post">
    <div class="form-group">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" type="password" />
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="SpecializationId"></label>
        <select asp-for="SpecializationId" class="form-control" asp-items="ViewBag.SpecializationId"></select>
    </div>
    <div class="form-group">
        <label asp-for="ConsultationFee"></label>
        <input asp-for="ConsultationFee" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
</form>
