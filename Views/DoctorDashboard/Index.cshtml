@model Online_Healthcare_Appointment_System.Models.ViewModels.DoctorDashboardVM
@{
    ViewData["Title"] = "Doctor Dashboard";
}

<div class="container mt-4">
    <h2 class="text-center text-primary fw-bold mb-4">
        <i class="bi bi-person-badge"></i> Welcome, Dr. @Model.DoctorName
    </h2>

    <!-- Summary Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm border-0 text-center p-3 h-100 hover-card">
                <div class="card-body">
                    <i class="bi bi-calendar-day text-primary" style="font-size: 3rem;"></i>
                    <h5 class="card-title mt-3">Today's Appointments</h5>
                    <p class="display-6 fw-bold text-primary">@Model.TodayCount</p>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm border-0 text-center p-3 h-100 hover-card">
                <div class="card-body">
                    <i class="bi bi-calendar-week text-success" style="font-size: 3rem;"></i>
                    <h5 class="card-title mt-3">This Week's Appointments</h5>
                    <p class="display-6 fw-bold text-success">@Model.ThisWeekCount</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Buttons -->
    <div class="d-flex flex-wrap justify-content-center gap-3 mb-4">
        <a asp-controller="Appointments" asp-action="Index" class="btn btn-outline-primary px-4 py-2">
            <i class="bi bi-calendar-check"></i> Manage Appointments
        </a>
        <a asp-controller="Patients" asp-action="Index" class="btn btn-outline-success px-4 py-2">
            <i class="bi bi-person-lines-fill"></i> View Patients
        </a>
        <a asp-controller="Prescriptions" asp-action="Index" class="btn btn-outline-danger px-4 py-2">
            <i class="bi bi-capsule"></i> Manage Prescriptions
        </a>
        <button id="downloadPDF" class="btn btn-primary px-4 py-2">
            <i class="bi bi-file-earmark-pdf"></i> Download Report
        </button>
    </div>

    <!-- Upcoming Appointments -->
    <div class="card shadow-sm border-0 p-3">
        <h5 class="text-primary fw-bold mb-3"><i class="bi bi-clock-history"></i> Upcoming Appointments</h5>
        <div class="table-responsive" id="doctorTableWrapper">
            <table class="table table-hover align-middle">
                <thead class="table-primary">
                    <tr>
                        <th>Date</th>
                        <th>Patient</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.UpcomingAppointments != null && Model.UpcomingAppointments.Any())
                    {
                        foreach (var appt in Model.UpcomingAppointments)
                        {
                            <tr>
                                <td>@appt.AppointmentDate.ToString("dd MMM yyyy")</td>
                                <td>@appt.PatientName</td>
                                <td>@appt.Status</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3" class="text-muted text-center">No upcoming appointments.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .hover-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .hover-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 15px rgba(0, 128, 255, 0.2);
        }

    .table th, .table td {
        text-align: center;
        vertical-align: middle;
    }

    .table-hover tbody tr:hover {
        background-color: #eaf2ff;
    }
</style>
