@model Online_Healthcare_Appointment_System.Models.Doctor
@{
    ViewData["Title"] = "Add New Doctor";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center">
            <h4 class="fw-bold text-primary mb-0">Add New Doctor</h4>
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">← Back</a>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="SpecializationId" class="form-label fw-semibold">Specialization</label>
                    <select asp-for="SpecializationId" class="form-select" asp-items="ViewBag.SpecializationId">
                        <option value="">-- Select Specialization --</option>
                    </select>
                    <span asp-validation-for="SpecializationId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ConsultationFee" class="form-label fw-semibold"></label>
                    <input asp-for="ConsultationFee" class="form-control" />
                    <span asp-validation-for="ConsultationFee" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="Availability" class="form-check-input" />
                    <label asp-for="Availability" class="form-check-label"></label>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="IsApproved" class="form-check-input" />
                    <label asp-for="IsApproved" class="form-check-label"></label>
                </div>

                <button type="submit" class="btn btn-primary px-4">Save</button>
                <a asp-action="Index" class="btn btn-outline-secondary px-4">Cancel</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
