@model Online_Healthcare_Appointment_System.Models.Doctor

@{
    ViewData["Title"] = "Doctor Details";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-primary text-white text-center">
            <h3>Doctor Details</h3>
        </div>

        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4 fw-bold">Name</dt>
                <dd class="col-sm-8">@Model.Name</dd>

                <dt class="col-sm-4 fw-bold">Specialization</dt>
                <dd class="col-sm-8">@Model.Specialization?.SpecializationName</dd>

                <dt class="col-sm-4 fw-bold">Consultation Fee</dt>
                <dd class="col-sm-8">@Model.ConsultationFee.ToString("C")</dd>

                <dt class="col-sm-4 fw-bold">Availability</dt>
                <dd class="col-sm-8">@Model.Availability</dd>

                <dt class="col-sm-4 fw-bold">Approved</dt>
                <dd class="col-sm-8">
                    @if (Model.IsApproved)
                    {
                        <span class="badge bg-success">Approved</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Pending</span>
                    }
                </dd>

                <dt class="col-sm-4 fw-bold">Phone Number</dt>
                <dd class="col-sm-8">
                    @(Model.User != null ? Model.User.PhoneNumber ?? "N/A" : "N/A")
                </dd>

                <dt class="col-sm-4 fw-bold">Email</dt>
                <dd class="col-sm-8">
                    @(Model.User != null ? Model.User.Email ?? "N/A" : "N/A")
                </dd>

            </dl>

            <div class="text-center mt-3">
                <a asp-action="Edit" asp-route-id="@Model.DoctorId" class="btn btn-warning text-white px-4">Edit</a>
                <a asp-action="Index" class="btn btn-secondary px-4 ms-2">Back</a>
            </div>
        </div>
    </div>
</div>
