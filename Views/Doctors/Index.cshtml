@model IEnumerable<Online_Healthcare_Appointment_System.Models.Doctor>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Availability)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConsultationFee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Specialization)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Availability)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConsultationFee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Specialization.SpecializationId)
            </td>
                <td>
                    @if (!item.IsApproved)
                    {
                        <a asp-action="Approve" asp-route-id="@item.DoctorId" class="btn btn-success btn-sm">Approve</a>
                    }
                    else
                    {
                        <span class="badge bg-success">Approved</span>
                    }

                    <a asp-action="Remove" asp-route-id="@item.DoctorId" class="btn btn-danger btn-sm">Remove</a>
                    <a asp-action="Edit" asp-route-id="@item.DoctorId" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.DoctorId" class="btn btn-info btn-sm">Details</a>
                </td>

        </tr>
}
    </tbody>
</table>
