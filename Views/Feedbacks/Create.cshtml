@model Online_Healthcare_Appointment_System.Models.Feedback
@{
    ViewData["Title"] = "Add Feedback";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-3 p-4">
        <h3 class="text-center text-success mb-3">
            <i class="bi bi-chat-square-heart"></i> Submit Feedback
        </h3>

        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="DoctorId" class="form-label fw-bold">Doctor</label>
                <select asp-for="DoctorId" class="form-select" asp-items="ViewBag.DoctorId"></select>
                <span asp-validation-for="DoctorId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Rating" class="form-label fw-bold">Rating (1–5)</label>
                <input asp-for="Rating" class="form-control" min="1" max="5" type="number" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Comments" class="form-label fw-bold">Comments</label>
                <textarea asp-for="Comments" class="form-control" rows="4" placeholder="Write your feedback..."></textarea>
                <span asp-validation-for="Comments" class="text-danger"></span>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-success px-4 me-2">
                    <i class="bi bi-send"></i> Submit
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary px-4">
                    <i class="bi bi-arrow-left"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>
