@model Online_Healthcare_Appointment_System.Models.Feedback
@{
    ViewData["Title"] = "Create Feedback";
}

<h2>Create Feedback</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="DoctorId" class="control-label">Doctor</label>
        <select asp-for="DoctorId" class="form-control" asp-items="ViewBag.DoctorId"></select>
        <span asp-validation-for="DoctorId" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label asp-for="Comments" class="control-label"></label>
        <textarea asp-for="Comments" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Comments" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label asp-for="Rating" class="control-label"></label>
        <input asp-for="Rating" class="form-control" type="number" min="1" max="5" />
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <!-- No PatientId or DateSubmitted inputs -->

    <button type="submit" class="btn btn-primary mt-3">Create</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
</form>
