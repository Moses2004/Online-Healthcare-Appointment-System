@model Online_Healthcare_Appointment_System.Models.Feedback
@{
    ViewData["Title"] = "Edit Feedback";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-3 p-4">
        <h3 class="text-center text-warning mb-3">
            <i class="bi bi-pencil-square"></i> Edit Your Feedback
        </h3>

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="FeedbackId" />

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label class="form-label fw-bold">Rating (1–5)</label>
                <input asp-for="Rating" class="form-control" min="1" max="5" type="number" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Comments" class="form-label fw-bold">Comments</label>
                <textarea asp-for="Comments" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Comments" class="text-danger"></span>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-warning px-4 me-2 text-white">
                    <i class="bi bi-check-circle"></i> Update
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary px-4">
                    <i class="bi bi-arrow-left"></i> Back
                </a>
            </div>
        </form>
    </div>
</div>
