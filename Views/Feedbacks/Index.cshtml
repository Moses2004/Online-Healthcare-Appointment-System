@model IEnumerable<Online_Healthcare_Appointment_System.Models.Feedback>

@{
    ViewData["Title"] = "Feedbacks";

    bool isAdmin = User.IsInRole("Admin");
    bool isDoctor = User.IsInRole("Doctor");
    bool isPatient = User.IsInRole("Patient");

    string backController = isAdmin ? "Admin" : (isDoctor ? "DoctorDashboard" : "PatientDashboard");
    string backAction = isAdmin ? "Dashboard" : "Index";
}

<div class="container mt-5 mb-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">
                <i class="bi bi-chat-dots"></i> Feedback List
            </h4>

            @if (isPatient)
            {
                <a asp-action="Create" class="btn btn-success btn-sm">
                    <i class="bi bi-plus-circle"></i> Add Feedback
                </a>
            }
        </div>

        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="alert alert-warning text-center p-4 rounded">
                    <i class="bi bi-exclamation-circle"></i> No feedback found.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle text-center">
                        <thead class="table-primary">
                            <tr>
                                <th>Feedback ID</th>
                                <th>Patient</th>
                                <th>Doctor</th>
                                <th>Rating</th>
                                <th>Comments</th>
                                <th>Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.FeedbackId</td>
                                    <td>@item.Patient?.Name</td>
                                    <td>@item.Doctor?.Name</td>
                                    <td>
                                        <span class="rating-stars">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                if (i <= item.Rating)
                                                {
                                                    <i class="bi bi-star-fill text-warning"></i>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-star text-secondary"></i>
                                                }
                                            }
                                        </span>
                                    </td>
                                    <td>@item.Comments</td>
                                    <td>@item.DateSubmitted.ToString("yyyy-MM-dd")</td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.FeedbackId" class="btn btn-sm btn-outline-info">
                                            <i class="bi bi-eye"></i>
                                        </a>

                                        @if (isAdmin || isPatient)
                                        {
                                            <a asp-action="Edit" asp-route-id="@item.FeedbackId" class="btn btn-sm btn-outline-primary mx-1">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.FeedbackId" class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>

        <div class="card-footer text-center">
            <a asp-controller="@backController" asp-action="@backAction" class="btn btn-outline-secondary">
                ← Back to Dashboard
            </a>
        </div>
    </div>
</div>

<style>
    .container {
        max-width: 1000px;
    }

    .card {
        border-radius: 15px;
    }

    th, td {
        vertical-align: middle !important;
    }

    .btn-sm i {
        font-size: 0.9rem;
    }

    .rating-stars i {
        font-size: 1.1rem;
        margin-right: 2px;
    }
</style>
