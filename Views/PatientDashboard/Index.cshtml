@{
    ViewData["Title"] = "Patient Dashboard";
}

<div class="container mt-4">
    <h2 class="text-center mb-4 fw-bold text-success">
        <i class="bi bi-heart-pulse"></i> Patient Dashboard
    </h2>

    <div class="row g-4 justify-content-center">

        <!-- View Appointments -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100 text-center p-3 hover-card">
                <div class="card-body">
                    <i class="bi bi-calendar2-check text-success" style="font-size: 3rem;"></i>
                    <h5 class="card-title mt-3">View Appointments</h5>
                    <p class="text-muted">Check your upcoming and past appointments easily.</p>
                    <a asp-controller="Appointments" asp-action="Index" class="btn btn-success px-4">Go</a>
                </div>
            </div>
        </div>

        <!-- View Prescriptions -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100 text-center p-3 hover-card">
                <div class="card-body">
                    <i class="bi bi-capsule text-teal" style="font-size: 3rem; color:#009688;"></i>
                    <h5 class="card-title mt-3">View Prescriptions</h5>
                    <p class="text-muted">Access your medical prescriptions securely.</p>
                    <a asp-controller="Prescriptions" asp-action="Index" class="btn btn-success px-4">Go</a>
                </div>
            </div>
        </div>


        <!-- View Paymentss -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100 text-center p-3 hover-card">
                <div class="card-body">
                    <i class="bi bi-capsule text-teal" style="font-size: 3rem; color:#009688;"></i>
                    <h5 class="card-title mt-3">View My Payment</h5>
                    <p class="text-muted">Vieww your payments history.</p>
                    <a asp-controller="Payments" asp-action="Index" class="btn btn-success px-4">Go</a>
                </div>
            </div>
        </div>

        

   
        <!-- Profile Management -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100 text-center p-3 hover-card">
                <div class="card-body">
                    <i class="bi bi-person-circle text-success" style="font-size: 3rem;"></i>
                    <h5 class="card-title mt-3">My Profile</h5>
                    <p class="text-muted">View or update your personal information.</p>
                    <a asp-controller="Patients" asp-action="ManageProfile" class="btn btn-success px-4">Edit</a>
                </div>
            </div>
        </div>

    </div>

    
</div>

<!-- Simple Hover Style -->
<style>
    .hover-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 15px rgba(0, 128, 0, 0.2);
    }
</style>
