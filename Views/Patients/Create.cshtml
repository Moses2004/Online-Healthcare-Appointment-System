@model Online_Healthcare_Appointment_System.Models.Patient
@{
    ViewData["Title"] = "Add New Patient";
}

<div class="container d-flex justify-content-center mt-5">
    <div class="card shadow-lg border-0 rounded-4" style="max-width: 700px; width: 100%;">
        <div class="card-body p-5">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="fw-bold text-primary mb-0">Add New Patient</h3>
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                    ← Back
                </a>
            </div>

            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label fw-semibold"></label>
                        <input asp-for="Name" class="form-control rounded-3" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Email" class="form-label fw-semibold"></label>
                        <input asp-for="Email" type="email" class="form-control rounded-3" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Password</label>
                        <input name="Password" type="password" class="form-control rounded-3" required />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Phone" class="form-label fw-semibold"></label>
                        <input asp-for="Phone" class="form-control rounded-3" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Gender" class="form-label fw-semibold"></label>
                        <select asp-for="Gender" class="form-select rounded-3">
                            <option value="">-- Select Gender --</option>
                            <option>Male</option>
                            <option>Female</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="DOB" class="form-label fw-semibold"></label>
                        <input asp-for="DOB" type="date" class="form-control rounded-3" />
                        <span asp-validation-for="DOB" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="Address" class="form-label fw-semibold"></label>
                        <textarea asp-for="Address" class="form-control rounded-3" rows="3"></textarea>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary px-5 py-2 rounded-3">
                        <i class="bi bi-person-plus"></i> Create
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2 rounded-3 ms-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
