@model IEnumerable<Online_Healthcare_Appointment_System.Models.Patient>
@using Microsoft.AspNetCore.Identity
@inject UserManager<Online_Healthcare_Appointment_System.Models.ApplicationUser> UserManager
@{
    bool isAdmin = User.IsInRole("Admin");
    bool isDoctor = User.IsInRole("Doctor");

    string backController = isDoctor ? "DoctorDashboard" : "Admin";
    string backAction = isDoctor ? "Index" : "Dashboard";
}

<div class="container mt-4">
    <h2 class="text-center fw-bold text-primary mb-4">
        <i class="bi bi-person-lines-fill"></i> Patient Accounts
    </h2>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <a asp-controller="@backController" asp-action="@backAction" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left-circle"></i> Back to Dashboard
        </a>

        @if (isAdmin)
        {
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add Patient
            </a>
        }
    </div>

    <div class="card shadow-sm border-0 p-3">
        <div class="table-responsive">
            <form asp-action="Index" method="get" class="mb-3">
                <div class="input-group">
                    <input type="text" name="searchEmail" value="@ViewData["SearchEmail"]" class="form-control" placeholder="Search by email..." />
                    <button type="submit" class="btn btn-primary">Search</button>
                    <a asp-action="Index" class="btn btn-secondary">Reset</a>
                </div>
            </form>

            <table class="table table-hover align-middle">
                <thead class="table-primary">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>DOB</th>
                        <th>Gender</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.User?.Email</td>
                            <td>@item.Phone</td>
                            <td>@(item.DOB.Year == 1 ? "-" : item.DOB.ToString("dd MMM yyyy"))</td>
                            <td>@item.Gender</td>
                            <td>
                                @if (isAdmin)
                                {
                                    <a asp-action="Edit" asp-route-id="@item.PatientId" class="btn btn-sm btn-info text-white">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.PatientId" class="btn btn-sm btn-primary">
                                        <i class="bi bi-info-circle"></i> Details
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.PatientId" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                }
                                else if (isDoctor)
                                {
                                    <a asp-action="Details" asp-route-id="@item.PatientId" class="btn btn-sm btn-primary">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .table th, .table td {
        text-align: center;
        vertical-align: middle;
    }

    .btn i {
        margin-right: 4px;
    }
</style>
