@model Online_Healthcare_Appointment_System.Models.Payment

@{
    ViewData["Title"] = "Create Payment";
}

<h2>Create Payment</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        <!-- ✅ FORM: make sure to specify method="post" -->
        <form asp-controller="Payments" asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <!-- ✅ Hidden AppointmentId to link payment to appointment -->
            <input type="hidden" asp-for="AppointmentId" value="@Model.AppointmentId" />

            <!-- Patient info -->
            <div class="form-group">
                <label>Patient</label>
                <p class="form-control-plaintext">@ViewBag.PatientName</p>
            </div>

            <!-- Doctor info -->
            <div class="form-group">
                <label>Doctor</label>
                <p class="form-control-plaintext">@ViewBag.DoctorName</p>
            </div>

            <!-- Payment amount -->
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>

            <!-- Payment method -->
            <div class="form-group">
                <label asp-for="PaymentMethod" class="control-label"></label>
                <select asp-for="PaymentMethod" class="form-control">
                    <option value="">-- Select Method --</option>
                    <option>Cash</option>
                    <option>Card</option>
                    <option>Online</option>
                    <option>QR Code</option>
                </select>
                <span asp-validation-for="PaymentMethod" class="text-danger"></span>
            </div>

            <!-- Submit + Back buttons -->
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Submit Payment</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
