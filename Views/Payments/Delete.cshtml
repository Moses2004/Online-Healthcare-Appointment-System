@model Online_Healthcare_Appointment_System.Models.Payment
@{
    ViewData["Title"] = "Delete Payment";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0 p-4">
        <h3 class="text-danger text-center mb-4">
            <i class="bi bi-trash"></i> Delete Payment
        </h3>
        <p class="text-center text-muted mb-4">Are you sure you want to delete this payment?</p>

        <dl class="row mb-4">
            <dt class="col-sm-3 fw-bold">Amount</dt>
            <dd class="col-sm-9">@Model.Amount.ToString("C")</dd>

            <dt class="col-sm-3 fw-bold">Method</dt>
            <dd class="col-sm-9">@Model.PaymentMethod</dd>

            <dt class="col-sm-3 fw-bold">Status</dt>
            <dd class="col-sm-9">@Model.Status</dd>
        </dl>

        <form asp-action="DeleteConfirmed">
            <input type="hidden" asp-for="PaymentId" />
            <div class="text-center">
                <button type="submit" class="btn btn-danger px-4">
                    <i class="bi bi-trash"></i> Confirm Delete
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary px-4">
                    <i class="bi bi-arrow-left"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>
