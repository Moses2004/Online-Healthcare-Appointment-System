@model Online_Healthcare_Appointment_System.Models.Payment
@{
    ViewData["Title"] = "Edit Payment";
}
<div class="container mt-5">
    <div class="card shadow-sm border-0 p-4">
        <h3 class="text-success text-center mb-4">
            <i class="bi bi-pencil-square"></i> Edit Payment
        </h3>
        <form asp-action="Edit">
            <input type="hidden" asp-for="PaymentId" />
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Amount" class="form-label">Amount</label>
                <input asp-for="Amount" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="PaymentMethod" class="form-label">Payment Method</label>
                <select asp-for="PaymentMethod" class="form-select">
                    <option>Cash</option>
                    <option>Credit Card</option>
                    <option>Bank Transfer</option>
                </select>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-success px-4">
                    <i class="bi bi-save"></i> Update
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary px-4">
                    <i class="bi bi-arrow-left"></i> Back
                </a>
            </div>
        </form>
    </div>
</div>
