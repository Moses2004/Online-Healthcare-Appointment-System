@model Online_Healthcare_Appointment_System.Models.Prescription

@{
    ViewData["Title"] = "Prescription Details";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0 p-4">
        <h3 class="text-success mb-3 text-center">
            <i class="bi bi-file-medical"></i> Prescription Details
        </h3>
        <hr />

        <dl class="row">
            <dt class="col-sm-3 fw-bold">Appointment</dt>
            <dd class="col-sm-9">@Model.Appointment?.AppointmentId</dd>

            <dt class="col-sm-3 fw-bold">Date Issued</dt>
            <dd class="col-sm-9">@Model.DateIssued.ToString("dd MMM yyyy")</dd>

            <dt class="col-sm-3 fw-bold">Prescription</dt>
            <dd class="col-sm-9">@Model.PrescriptionDetails</dd>

            <dt class="col-sm-3 fw-bold">Doctor Notes</dt>
            <dd class="col-sm-9">@Model.DoctorNotes</dd>
        </dl>

        <div class="text-center mt-4">
            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                <i class="bi bi-arrow-left-circle"></i> Back to List
            </a>
        </div>
    </div>
</div>
