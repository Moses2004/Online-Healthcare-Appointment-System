@model IEnumerable<Online_Healthcare_Appointment_System.Models.Prescription>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DoctorNotes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrescriptionDetails)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateIssued)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DoctorNotes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrescriptionDetails)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateIssued)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Appointment.AppointmentId)
            </td>
            <td>
               
                <a asp-action="Details" asp-route-id="@item.PrescriptionId">Details</a> |
               
            </td>
            @if (User.IsInRole("Doctor"))
{
    <td>
        <a asp-action="Edit" asp-route-id="@item.PrescriptionId">Edit</a> |
        <a asp-action="Delete" asp-route-id="@item.PrescriptionId">Delete</a>
    </td>
}


        </tr>
}
    </tbody>
</table>
