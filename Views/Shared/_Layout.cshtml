@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">


<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MediCare Pvt Ltd</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/_Layout.cshtml.css" asp-append-version="true" />
   
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/_Layout.cshtml.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <style>
        /*  Add visual polish */
        body {
            background: #f8fbff;
            font-family: "Poppins", sans-serif;
        }

        .navbar {
            background: linear-gradient(90deg, #0d6efd, #0dcaf0);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand {
            font-weight: 700;
            color: #fff !important;
            letter-spacing: 0.5px;
        }

        .navbar-nav .nav-link {
            color: #f1f1f1 !important;
            font-weight: 500;
        }

            .navbar-nav .nav-link:hover {
                color: #fff !important;
                text-decoration: underline;
            }

        footer {
            background: #0d6efd;
            color: #fff;
            text-align: center;
            padding: 20px 0;
            margin-top: 40px;
        }

            footer a {
                color: #fff;
                text-decoration: underline;
            }

        .hero-section {
            background: url('/images/medical-bg.jpg') center/cover no-repeat;
            color: #fff;
            text-align: center;
            padding: 100px 20px;
            border-radius: 10px;
            margin-bottom: 40px;
        }

            .hero-section h1 {
                font-weight: 700;
                font-size: 2.8rem;
            }

            .hero-section p {
                font-size: 1.1rem;
            }

        .hero-btn {
            background: #fff;
            color: #0d6efd;
            border: none;
            padding: 10px 25px;
            border-radius: 25px;
            transition: all 0.3s ease;
        }

            .hero-btn:hover {
                background: #0d6efd;
                color: #fff;
                transform: scale(1.05);
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-heart-pulse-fill me-2"></i>MediCare Pvt Ltd
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Appointments" asp-action="Index">Appointments</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Doctors" asp-action="Index">Doctors</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Patients" asp-action="Index">Patients</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Payments" asp-action="Index">Payments</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Feedbacks" asp-action="Index">Feedback</a></li>

                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <partial name="_LoginPartial" />
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                 <partial name="_LoginPartial" />
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-3">
    @RenderBody()
</main>



    <footer>
        <div class="container">
            <p class="mb-1">&copy; @DateTime.Now.Year MediCare Pvt Ltd. All Rights Reserved.</p>
            <p>
                <i class="bi bi-geo-alt"></i> Yangon, Myanmar |
                <i class="bi bi-telephone"></i> +95 9 123 456 789 |
                <i class="bi bi-envelope"></i> support@medicare.com
            </p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
