@model Online_Healthcare_Appointment_System.Models.Specialization

@{
    ViewData["Title"] = "Add Specialization";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-success text-white text-center">
            <h3>Add New Specialization</h3>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div class="mb-3">
                    <label asp-for="SpecializationName" class="form-label fw-bold"></label>
                    <input asp-for="SpecializationName" class="form-control" placeholder="Enter specialization name" />
                    <span asp-validation-for="SpecializationName" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-success px-4">Save</button>
                    <a asp-action="Index" class="btn btn-secondary px-4 ms-2">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
