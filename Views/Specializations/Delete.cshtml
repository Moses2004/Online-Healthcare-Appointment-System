@model Online_Healthcare_Appointment_System.Models.Specialization

@{
    ViewData["Title"] = "Delete Specialization";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-danger text-white text-center">
            <h3>Delete Specialization</h3>
        </div>
        <div class="card-body text-center">
            <p class="lead text-muted mb-4">Are you sure you want to delete this specialization?</p>
            <h5 class="text-danger fw-bold">@Model.SpecializationName</h5>
            <form asp-action="Delete">
                <input type="hidden" asp-for="SpecializationId" />
                <div class="mt-4">
                    <button type="submit" class="btn btn-danger px-4">Delete</button>
                    <a asp-action="Index" class="btn btn-secondary px-4 ms-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
