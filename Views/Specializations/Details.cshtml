@model Online_Healthcare_Appointment_System.Models.Specialization

@{
    ViewData["Title"] = "Specialization Details";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-info text-white text-center">
            <h3>Specialization Details</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4 fw-bold">ID</dt>
                <dd class="col-sm-8">@Model.SpecializationId</dd>

                <dt class="col-sm-4 fw-bold">Specialization Name</dt>
                <dd class="col-sm-8">@Model.SpecializationName</dd>
            </dl>
            <div class="text-center mt-3">
                <a asp-action="Edit" asp-route-id="@Model.SpecializationId" class="btn btn-warning text-white px-4">Edit</a>
                <a asp-action="Index" class="btn btn-secondary px-4 ms-2">Back to List</a>
            </div>
        </div>
    </div>
</div>
