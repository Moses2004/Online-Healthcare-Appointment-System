@model IEnumerable<Online_Healthcare_Appointment_System.Models.Specialization>

@{
    ViewData["Title"] = "Specializations";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-success text-white text-center">
            <h3>Specializations List</h3>
        </div>
        <div class="card-body">
            <div class="text-end mb-3">
                <a asp-action="Create" class="btn btn-success">+ Add New Specialization</a>
                <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-secondary ms-2">Back to Dashboard</a>
            </div>
            <table class="table table-bordered table-hover align-middle">
                <thead class="table-success text-center">
                    <tr>
                        <th>ID</th>
                        <th>Specialization Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">@item.SpecializationId</td>
                            <td>@item.SpecializationName</td>
                            <td class="text-center">
                                <a asp-action="Details" asp-route-id="@item.SpecializationId" class="btn btn-info btn-sm text-white">Details</a>
                                <a asp-action="Edit" asp-route-id="@item.SpecializationId" class="btn btn-warning btn-sm text-white">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.SpecializationId" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
